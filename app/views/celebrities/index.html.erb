<div class= "bg-color">

  <div class="container">
  <%# <h1>Find Your Celebrity</h1> %>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>

    <div class="cards">
      <% @celebrities.each do |celebrity| %>
        <%#= link_to celebrity.first_name, celebrity_path(celebrity) %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=celebrity.url %>)">
        <%= celebrity.first_name %> <%= celebrity.last_name %>
        </div>
      <% end %>
    </div>

  </div>
</div>
